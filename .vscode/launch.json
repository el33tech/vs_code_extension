{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Extension",
            "program": "${workspaceFolder}/node_modules/.bin/vscode",
            "args": [
                "${workspaceFolder}/out/extension.js"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch",
            "sourceMaps": true,
            "smartStep": true
        }
    ]
}